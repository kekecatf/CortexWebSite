@{
    ViewBag.Title = "Home";
}

@section meta {
    <meta name="description" content="Larana - Shop the best from local sellers. Find unique products from our marketplace community.">
    <meta property="og:title" content="Larana - Marketplace">
    <meta property="og:description" content="Shop the best from local sellers. Find unique products from our marketplace community.">
}

<!-- Hero Banner Section -->
<section id="hero-banner">
    <div class="hero-content">
        <h1>Shop the Best from Local Sellers</h1>
        <p>Discover unique products from our seller community</p>
        <div class="hero-buttons">
            <a href="@Url.Action("Index", "Dukkan")" class="btn btn-primary btn-lg">Explore Shops</a>
            <a href="@Url.Action("Index", "Shop")" class="btn btn-outline-light btn-lg">Browse Products</a>
        </div>
    </div>
</section>

<!-- Search Section -->
<section id="search-section" class="container mt-n5">
    <div class="search-container">
        <div class="card shadow">
            <div class="card-body">
                <form action="@Url.Action("Search", "Shop")" method="get" class="search-form">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <select name="searchType" class="form-control search-type">
                                <option value="products">Products</option>
                                <option value="shops">Shops</option>
                            </select>
                        </div>
                        <input type="text" name="q" class="form-control" placeholder="What are you looking for today?" aria-label="Search" required>
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Carousel/Promo Slider Section -->
<section id="carousel-section" class="container mt-5">
    <div id="promoCarousel" class="carousel slide shadow" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#promoCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#promoCarousel" data-slide-to="1"></li>
            <li data-target="#promoCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner rounded">
            <div class="carousel-item active">
                <div class="promo-slide slide-1">
                    <div class="carousel-caption">
                        <h2>Limited Time Offers</h2>
                        <p>Check out our exclusive deals from top sellers</p>
                        <a href="@Url.Action("Index", "Shop", new { category = "featured" })" class="btn btn-outline-light">Shop Now</a>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="promo-slide slide-2">
                    <div class="carousel-caption">
                        <h2>Become a Seller</h2>
                        <p>Join our marketplace and start selling your products today</p>
                        <a href="@Url.Action("BecomeASeller", "Account")" class="btn btn-outline-light">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="promo-slide slide-3">
                    <div class="carousel-caption">
                        <h2>Free Shipping</h2>
                        <p>On orders over $50 - Limited time only</p>
                        <a href="@Url.Action("Index", "Shop")" class="btn btn-outline-light">Start Shopping</a>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#promoCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#promoCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<!-- Featured Products Section -->
<section id="product-section" class="container mt-5">
    <div class="section-header">
        <h2>Featured Products</h2>
        <a href="@Url.Action("Index", "Shop")" class="btn btn-outline-primary btn-sm">View All</a>
    </div>
    <div class="row products-grid">
        @foreach (var product in ViewBag.NewProducts ?? new List<Larana.Models.Product>())
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="product-card">
                    <a href="@Url.Action("Details", "Shop", new { id = product.Id })">
                        <div class="product-img-container">
                            @if (string.IsNullOrEmpty(product.PhotoPath))
                            {
                                <div class="placeholder-img">
                                    <i class="fas fa-image"></i>
                                </div>
                            }
                            else
                            {
                                <img class="product-img" src="@Url.Content("~/" + product.PhotoPath)" alt="@product.Name">
                            }
                        </div>
                        <div class="product-info">
                            <span class="product-brand">@product.Brand</span>
                            <h5 class="product-name">@product.Name</h5>
                            <div class="product-price">@string.Format("${0:N2}", product.Price)</div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</section>

<!-- Best Sellers Section -->
<section id="best-sellers-section" class="container mt-5 mb-5">
    <div class="section-header">
        <h2>Best Sellers</h2>
        <a href="@Url.Action("Index", "Shop", new { sort = "popular" })" class="btn btn-outline-primary btn-sm">View All</a>
    </div>
    <div class="row products-grid">
        @foreach (var product in ViewBag.BestSellers ?? new List<Larana.Models.Product>())
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="product-card">
                    <a href="@Url.Action("Details", "Shop", new { id = product.Id })">
                        <div class="product-img-container">
                            @if (string.IsNullOrEmpty(product.PhotoPath))
                            {
                                <div class="placeholder-img">
                                    <i class="fas fa-image"></i>
                                </div>
                            }
                            else
                            {
                                <img class="product-img" src="@Url.Content("~/" + product.PhotoPath)" alt="@product.Name">
                            }
                        </div>
                        <div class="product-info">
                            <span class="product-brand">@product.Brand</span>
                            <h5 class="product-name">@product.Name</h5>
                            <div class="product-price">@string.Format("${0:N2}", product.Price)</div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</section>

<!-- Popular Shops Section -->
<section id="popular-shops-section" class="container mt-5 mb-5 pb-4">
    <div class="section-header">
        <h2>🏆 Popular Shops</h2>
        <a href="@Url.Action("Index", "Dukkan")" class="btn btn-outline-primary btn-sm">View All Shops</a>
    </div>
    
    @if (ViewBag.PopularShops == null || !(ViewBag.PopularShops as IEnumerable<Larana.Models.Dukkan>).Any())
    {
        <div class="alert alert-info">
            <p class="mb-0">No shops available yet. <a href="@Url.Action("BecomeASeller", "Account")">Become a seller</a> and be the first!</p>
        </div>
    }
    else
    {
        <!-- Debug info -->
        <div class="alert alert-info mb-4">
            <p class="mb-0">Found @((ViewBag.PopularShops as IEnumerable<Larana.Models.Dukkan>).Count()) shops to display</p>
        </div>
        <div id="shopsCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{
                    var shopList = ViewBag.PopularShops as IEnumerable<Larana.Models.Dukkan>;
                    if (shopList == null) { 
                        shopList = new List<Larana.Models.Dukkan>();
                    }
                    var shopGroups = shopList.Select((shop, index) => new { shop, index })
                                            .GroupBy(x => x.index / 4)
                                            .Select(g => g.Select(x => x.shop).ToList())
                                            .ToList();
                }
                
                @for (int i = 0; i < shopGroups.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="row">
                            @foreach (var shop in shopGroups[i])
                            {
                                <div class="col-lg-3 col-md-3 col-sm-6 mb-4">
                                    <div class="shop-card h-100">
                                        <div class="card">
                                            <div class="shop-logo-wrapper">
                                                @if (string.IsNullOrEmpty(shop.LogoPath))
                                                {
                                                    <div class="placeholder-img shop-logo-placeholder">
                                                        <i class="fas fa-store"></i>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <img src="@Url.Content("~/" + shop.LogoPath)" class="card-img-top shop-logo" alt="@shop.Name">
                                                }
                                            </div>
                                            <div class="card-body">
                                                <h5 class="card-title text-center">@shop.Name</h5>
                                                <div class="shop-rating text-center mb-3">
                                                    @for (int j = 1; j <= 5; j++)
                                                    {
                                                        if (j <= Math.Floor(shop.Rating))
                                                        {
                                                            <i class="fas fa-star text-warning"></i>
                                                        }
                                                        else if ((decimal)(j - 0.5) <= shop.Rating)
                                                        {
                                                            <i class="fas fa-star-half-alt text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star text-warning"></i>
                                                        }
                                                    }
                                                    <span class="rating-value ml-1">@shop.Rating.ToString("0.0")</span>
                                                </div>
                                                <div class="text-center">
                                                    <a href="@Url.Action("Details", "Dukkan", new { id = shop.Id })" class="btn btn-primary">
                                                        <i class="fas fa-store mr-1"></i> Visit Shop
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
            @if (shopGroups.Count > 1)
            {
                <a class="carousel-control-prev shop-carousel-control" href="#shopsCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next shop-carousel-control" href="#shopsCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                
                <ol class="carousel-indicators shop-indicators">
                    @for (int i = 0; i < shopGroups.Count; i++)
                    {
                        <li data-target="#shopsCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                    }
                </ol>
            }
        </div>
    }
</section>

