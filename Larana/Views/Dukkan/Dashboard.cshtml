@model Larana.Models.Dukkan

@{
    ViewBag.Title = "Shop Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <h4 class="mb-0 flex-grow-1">Dashboard</h4>
                    <span class="badge @(Model.IsPublished ? "bg-success" : "bg-warning") me-2">
                        @(Model.IsPublished ? "Published" : "Draft")
                    </span>
                    <a href="@Url.Action("Edit", "Dukkan", new { id = Model.Id })" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Edit Shop
                    </a>
                </div>
                <p class="text-muted">Overview of your shop performance and operations</p>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card h-100 border-primary">
            <div class="card-body text-center">
                <i class="fas fa-shopping-cart fa-2x text-primary mb-3"></i>
                <h5 class="card-title">Total Orders</h5>
                <h3 class="mb-0">@ViewBag.TotalOrders</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card h-100 border-success">
            <div class="card-body text-center">
                <i class="fas fa-money-bill-wave fa-2x text-success mb-3"></i>
                <h5 class="card-title">Revenue</h5>
                <h3 class="mb-0">$@ViewBag.TotalRevenue.ToString("0.00")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card h-100 border-info">
            <div class="card-body text-center">
                <i class="fas fa-boxes fa-2x text-info mb-3"></i>
                <h5 class="card-title">Products</h5>
                <h3 class="mb-0">@ViewBag.ProductsCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card h-100 border-warning">
            <div class="card-body text-center">
                <i class="fas fa-clock fa-2x text-warning mb-3"></i>
                <h5 class="card-title">Pending Orders</h5>
                <h3 class="mb-0">@ViewBag.PendingOrders</h3>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("AddProduct", "Dukkan", new { id = Model.Id })" class="btn btn-outline-primary w-100 h-100 p-3">
                            <i class="fas fa-plus fa-2x mb-2"></i>
                            <div>Add New Product</div>
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("ManageOrders", "Dukkan", new { id = Model.Id })" class="btn btn-outline-primary w-100 h-100 p-3">
                            <i class="fas fa-truck fa-2x mb-2"></i>
                            <div>Manage Orders</div>
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Profile", "Dukkan", new { id = Model.Id })" class="btn btn-outline-primary w-100 h-100 p-3">
                            <i class="fas fa-store fa-2x mb-2"></i>
                            <div>Edit Shop Profile</div>
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Details", "Dukkan", new { id = Model.Id })" class="btn btn-outline-primary w-100 h-100 p-3">
                            <i class="fas fa-external-link-alt fa-2x mb-2"></i>
                            <div>View Shop</div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders and Best Selling Products -->
<div class="row">
    <!-- Recent Orders -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Orders</h5>
                <a href="@Url.Action("ManageOrders", "Dukkan", new { id = Model.Id })" class="btn btn-sm btn-light">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Order #</th>
                                <th>Date</th>
                                <th>Customer</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.RecentOrders != null && ViewBag.RecentOrders.Count > 0)
                            {
                                foreach (var order in ViewBag.RecentOrders)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                                        <td>@order.User.FirstName @order.User.LastName</td>
                                        <td>
                                            <span class="badge @(order.Status == "Pending" ? "bg-warning" : 
                                                                 order.Status == "Shipped" ? "bg-info" : 
                                                                 order.Status == "Completed" ? "bg-success" : "bg-secondary")">
                                                @order.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-3">No orders yet</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Best Selling Products -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Best Selling Products</h5>
                <a href="@Url.Action("ManageProducts", "Dukkan", new { id = Model.Id })" class="btn btn-sm btn-light">Manage Products</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th>Sold</th>
                                <th>Revenue</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.BestSellingProducts != null && ViewBag.BestSellingProducts.Count > 0)
                            {
                                foreach (var product in ViewBag.BestSellingProducts)
                                {
                                    <tr>
                                        <td>@product.Product.Name</td>
                                        <td>@product.TotalSold</td>
                                        <td>$@product.Revenue.ToString("0.00")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center py-3">No sales data yet</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 