@{
    ViewBag.Title = "Hesabım";
}

<div class="container">
    <div class="account-wrapper">
        <h2 class="account-title">Hesabım</h2>
        <p class="welcome-message">Tekrar hoş geldiniz, <strong>@User.Identity.Name</strong></p>
        <div class="account-actions">
            <a href="@Url.Action("Edit", "Account")" class="btn btn-edit">Hesabımı Düzenle</a>
            <a href="@Url.Action("ViewOrders", "Account")" class="btn btn-orders">Siparişlerimi Görüntüle</a>
        </div>
    </div>
</div>

<style>
    /* Genel konteyner stilleri */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        margin: 0 auto;
        padding: 20px;
    }

    /* Hesap kapsayıcı stilleri */
    .account-wrapper {
        width: 100%;
        max-width: 450px;
        background: linear-gradient(to bottom right, #f9f9f9, #ffffff);
        padding: 40px 30px;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        text-align: center;
        border: 1px solid #ddd;
    }

    /* Başlık stilleri */
    .account-title {
        font-size: 28px;
        font-weight: 700;
        color: #007BFF;
        margin-bottom: 15px;
        letter-spacing: 1px;
    }

    /* Hoşgeldiniz mesajı stilleri */
    .welcome-message {
        font-size: 16px;
        color: #555;
        margin-bottom: 25px;
    }

    /* Buton stilleri */
    .account-actions .btn {
        display: inline-block;
        width: 80%;
        background-color: #007BFF;
        color: #fff;
        text-align: center;
        border: none;
        border-radius: 5px;
        padding: 12px 25px;
        font-size: 16px;
        font-weight: bold;
        text-decoration: none; /* Alt çizgiyi kaldır */
        margin-bottom: 15px; /* Butonlar arası boşluk */
    }

        .account-actions .btn:hover {
            background-color: #0056b3;
            text-decoration: none; /* Üzerine gelindiğinde alt çizginin kaldırıldığından emin ol */
        }

    /* Duyarlı ayarlamalar */
    @@media (max-width: 768px) {
        .account-wrapper {
            padding: 30px 20px;
            max-width: 90%;
        }

        .account-title {
            font-size: 24px;
        }

        .account-actions .btn {
            width: 100%;
            padding: 10px 15px;
        }
    }
</style>
