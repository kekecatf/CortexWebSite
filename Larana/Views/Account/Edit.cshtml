@model Larana.Models.User

<div class="container">
    <div class="form-wrapper">
        <h2 class="form-title">Hesabımı Düzenle</h2>
        
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""].Errors.Count > 0)
        {
            <div class="error-message">
                @foreach (var error in ViewData.ModelState[""].Errors)
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
        
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info text-center">
                @ViewBag.Message
            </div>
        }
        
        @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Username, "Kullanıcı Adı")
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", required = "required", placeholder = "Kullanıcı adınızı girin" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, "E-posta")
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", placeholder = "E-posta adresinizi girin" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, "Adres")
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Adresinizi girin" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber, "Telefon Numarası")
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Telefon numaranızı girin" })
            </div>
            <hr />
            <h4 class="password-title">Şifre Güncelleme (İsteğe Bağlı)</h4>
            <div class="form-group">
                <label for="currentPassword">Mevcut Şifre</label>
                <input type="password" id="currentPassword" name="currentPassword" class="form-control" placeholder="Mevcut şifrenizi girin">
            </div>
            <div class="form-group">
                <label for="newPassword">Yeni Şifre</label>
                <input type="password" id="newPassword" name="newPassword" class="form-control" placeholder="Yeni şifrenizi girin">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Değişiklikleri Kaydet</button>
        }
    </div>
</div>

<style>
/* Genel konteyner stilleri */
.container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    margin: 0;
    padding: 20px;
}

/* Hata mesajı stili */
.error-message {
    background-color: #f8d7da;
    color: #721c24;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 15px;
    text-align: center;
    border: 1px solid #f5c6cb;
}

.error-message p {
    margin: 5px 0;
}

.text-danger {
    color: #dc3545;
    font-size: 12px;
    margin-top: 5px;
    display: block;
}

/* Form kapsayıcı stilleri */
.form-wrapper {
    width: 100%;
    max-width: 450px;
    background: #ffffff;
    padding: 40px 30px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

/* Form başlık stilleri */
.form-title {
    font-size: 28px;
    font-weight: bold;
    color: #007BFF;
    text-align: center;
    margin-bottom: 20px;
}

/* Şifre güncelleme başlık stilleri */
.password-title {
    font-size: 18px;
    font-weight: bold;
    color: #555;
    margin-bottom: 10px;
    margin-top:10px
}

/* Form grup stilleri */
.form-group {
    margin-bottom: 20px;
}

/* Giriş alanı stilleri */
.form-control {
    width: 100%;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 12px;
    font-size: 16px;
    transition: border-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}

.form-control:focus {
    border-color: #007BFF;
    outline: none;
    box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
}

/* Buton stilleri */
.btn {
    display: inline-block;
    width: 100%;
    background-color: #007BFF;
    color: #fff;
    border: none;
    border-radius: 5px;
    padding: 12px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}

.btn:hover {
    background-color: #0056b3;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

/* Bilgi uyarısı stilleri */
.alert-info {
    background-color: #e3f2fd;
    border: 1px solid #90caf9;
    color: #0d47a1;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 20px;
    text-align: center;
}

/* Duyarlı ayarlamalar */
@@media (max-width: 768px) {
    .form-wrapper {
        padding: 30px 20px;
    }

    .form-title {
        font-size: 24px;
    }

    .btn {
        font-size: 14px;
        padding: 10px;
    }
}
</style>
