@model Larana.Models.User
<div class="container">
    <div class="form-wrapper">
        <h2 class="form-title">Kayıt Ol</h2>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Username, "Kullanıcı Adı")
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı Girin", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, "E-posta")
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-posta Girin", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Şifre")
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifre Girin", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, "Adres")
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Adres Girin", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber, "Telefon Numarası")
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Telefon Numarası Girin", required = "required" })
            </div>
            <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
        }
        <div class="text-center mt-3">
            <a href="@Url.Action("Login", "Account")" class="custom-link">Zaten hesabınız var mı? Buradan giriş yapın</a>
        </div>
    </div>
</div>
<style>
    /* Center the container and set max width */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        margin: 0 auto;
        padding: 20px;
    }
    /* Form wrapper styling */
    .form-wrapper {
        width: 100%;
        max-width: 400px;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    /* Form title styling */
    .form-title {
        font-size: 24px;
        font-weight: bold;
        color: #007BFF;
        text-align: center;
        margin-bottom: 20px;
    }
    /* Form group styling */
    .form-group {
        margin-bottom: 15px;
    }
    /* Input field styling */
    .form-control {
        width: 100%;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
        font-size: 14px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #007BFF;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }
    /* Button styling */
    .btn {
        width: 100%;
        background-color: #007BFF;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
        }
    /* Link styling */
    .custom-link {
        color: #007BFF;
        text-decoration: none;
        font-size: 14px;
    }

        .custom-link:hover {
            color: #0056b3;
            text-decoration: none; /* Prevent underline on hover */
        }
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .form-wrapper {
            max-width: 100%;
        }
    }
</style>