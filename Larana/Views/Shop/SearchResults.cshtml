@{
    ViewBag.Title = "Search Results for \"" + ViewBag.SearchQuery + "\"";
}

@section meta {
    <meta name="robots" content="noindex, follow">
    <meta name="description" content="Search results for @ViewBag.SearchQuery - Larana Marketplace">
}

<div class="container mt-4 mb-5">
    <div class="search-header mb-4">
        <h1 class="h3">Search Results</h1>
        <p class="lead text-muted">
            Found @ViewBag.ResultCount results for 
            <span class="font-weight-bold">@ViewBag.SearchQuery</span> 
            in @(ViewBag.SearchType == "shops" ? "Shops" : "Products")
        </p>
        
        <div class="search-form-container mt-3 mb-4">
            <form action="@Url.Action("Search", "Shop")" method="get" class="search-form">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <select name="searchType" class="form-control search-type">
                            <option value="products" @(ViewBag.SearchType == "products" ? "selected" : "")>Products</option>
                            <option value="shops" @(ViewBag.SearchType == "shops" ? "selected" : "")>Shops</option>
                        </select>
                    </div>
                    <input type="text" name="q" class="form-control" value="@ViewBag.SearchQuery" placeholder="Search again..." aria-label="Search" required>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    @if (ViewBag.ResultCount == 0)
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">No results found</h4>
            <p>We couldn't find any @(ViewBag.SearchType == "shops" ? "shops" : "products") matching your search criteria.</p>
            <hr>
            <p class="mb-0">Try using different keywords or check out our 
                @if (ViewBag.SearchType == "shops")
                {
                    <a href="@Url.Action("Index", "Dukkan")">shops directory</a>
                }
                else
                {
                    <a href="@Url.Action("Index", "Shop")">products catalog</a>
                }
            </p>
        </div>
    }
    else
    {
        if (ViewBag.SearchType == "shops")
        {
            <!-- Shop search results -->
            <div class="row shops-grid">
                @foreach (var shop in ViewBag.SearchResults)
                {
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card shop-card h-100">
                            <div class="card-body d-flex flex-column">
                                <div class="shop-logo-container mb-3">
                                    @if (string.IsNullOrEmpty(shop.LogoPath))
                                    {
                                        <div class="placeholder-img">
                                            <i class="fas fa-store"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <img class="img-fluid shop-logo" src="@shop.LogoPath" alt="@shop.Name">
                                    }
                                </div>
                                <h5 class="card-title">@shop.Name</h5>
                                
                                <div class="shop-details mb-2">
                                    @if (!string.IsNullOrEmpty(shop.Location))
                                    {
                                        <div class="shop-location">
                                            <i class="fas fa-map-marker-alt"></i> @shop.Location
                                        </div>
                                    }
                                </div>
                                
                                <p class="card-text flex-grow-1">
                                    @(shop.Description != null ? (shop.Description.Length > 100 ? shop.Description.Substring(0, 100) + "..." : shop.Description) : "")
                                </p>
                                
                                <a href="@Url.Action("Details", "Dukkan", new { id = shop.Id })" class="btn btn-outline-primary mt-auto">
                                    View Shop
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Product search results -->
            <div class="row products-grid">
                @foreach (var product in ViewBag.SearchResults)
                {
                    <div class="col-md-3 col-sm-6 mb-4">
                        <div class="product-card h-100">
                            <a href="@Url.Action("Details", "Shop", new { id = product.Id })">
                                <div class="product-img-container">
                                    @if (string.IsNullOrEmpty(product.PhotoPath))
                                    {
                                        <div class="placeholder-img">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <img class="product-img" src="@Url.Content("~/" + product.PhotoPath)" alt="@product.Name">
                                    }
                                </div>
                                <div class="product-info">
                                    <span class="product-brand">@product.Brand</span>
                                    <h5 class="product-name">@product.Name</h5>
                                    <div class="product-price">@string.Format("${0:N2}", product.Price)</div>
                                    @if (product.Dukkan != null)
                                    {
                                        <div class="shop-name mt-2">
                                            <small>
                                                <i class="fas fa-store"></i> @product.Dukkan.Name
                                            </small>
                                        </div>
                                    }
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

<style>
    /* Search Form Styles */
    .search-form-container {
        max-width: 700px;
    }
    
    .search-type {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        width: 120px;
    }
    
    /* Shop Card Styles */
    .shop-card {
        border: 1px solid #eee;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .shop-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .shop-logo-container {
        height: 150px;
        overflow: hidden;
        background: #f9f9f9;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .shop-logo {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
    }
    
    .shop-location {
        color: #777;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }
    
    /* Product Card Styles */
    .product-card {
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .product-card a {
        color: inherit;
        text-decoration: none;
        display: block;
        height: 100%;
    }
    
    .product-img-container {
        height: 200px;
        overflow: hidden;
        background: #f9f9f9;
    }
    
    .placeholder-img {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ccc;
        background: #f0f0f0;
    }

    .placeholder-img i {
        font-size: 3rem;
    }
    
    .product-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .product-card:hover .product-img {
        transform: scale(1.05);
    }
    
    .product-info {
        padding: 15px;
        background: white;
    }
    
    .product-brand {
        display: block;
        color: #777;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }
    
    .product-name {
        font-weight: 600;
        margin-bottom: 10px;
        height: 40px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
    
    .product-price {
        font-weight: 700;
        color: #007bff;
        font-size: 1.1rem;
    }
    
    .shop-name {
        color: #666;
        border-top: 1px solid #eee;
        padding-top: 8px;
    }
</style> 