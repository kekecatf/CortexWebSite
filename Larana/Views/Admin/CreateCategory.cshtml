@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Yeni Kategori Oluştur";
}

<h2 class="text-center mb-4">Yeni Kategori Oluştur</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                @using (Html.BeginForm("CreateCategory", "Admin", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="categoryName" class="font-weight-bold">Kategori Adı:</label>
                        <input type="text" id="categoryName" name="categoryName" class="form-control" required />
                    </div>
                    
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">Kategori Oluştur</button>
                        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">İptal</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        margin-top: 20px;
    }
    
    .card-body {
        padding: 30px;
    }
    
    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
    }
    
    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        margin-left: 10px;
    }
    
    .alert {
        margin-bottom: 20px;
        padding: 15px;
        border-radius: 5px;
    }
    
    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
    
    .form-control {
        padding: 10px;
        height: auto;
        font-size: 16px;
    }
</style> 